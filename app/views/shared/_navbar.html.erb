<%# app/views/shared/_navbar.html.erb %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <%= link_to "What's New", root_path, class: "navbar-brand" %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0"> <%# Changed to me-auto for right-aligned auth links %>
        <li class="nav-item">
          <%= link_to 'Users', users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Chats', chats_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to 'Messages', messages_path, class: "nav-link" %>
        </li>
      </ul>

      <ul class="navbar-nav"> <%# New ul for auth links %>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%# You might want to link to the current_user's profile if you have one %>
            <span class="navbar-text text-white me-3">
              Logged in as: <%= current_user.email %>
            </span>
          </li>
          <li class="nav-item">
            <%= link_to 'Edit account', edit_user_registration_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= button_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-link nav-link' %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>