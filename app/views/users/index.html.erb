<%# app/views/users/index.html.erb %>
<h1>Users</h1>

<%# Link to create a new user %>
<p><%= link_to "Add New User", new_user_path %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="1"></th> <%# Adjust colspan if adding more links %>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>