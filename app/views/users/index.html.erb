<%# app/views/users/index.html.erb %>
<h1>Users</h1>

<p><%= link_to "Add New User", new_user_path %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Messages Sent</th> 
      <th colspan="2">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.full_name, user_path(user) %></td>
        <td><%= user.email %></td>
        <td><%= user.messages.count %></td> 
        <td><%= link_to 'Show', user_path(user) %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td> 
      </tr>
    <% end %>
  </tbody>
</table>