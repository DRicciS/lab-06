<%# app/views/messages/index.html.erb %>
<h1>All Messages</h1>

<%# Link to create a new message %>
<p><%= link_to "Send New Message", new_message_path %></p>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Chat</th>
      <th>Body</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.user.full_name %></td>
        <td><%= link_to message.chat.chat_participants, chat_path(message.chat) %></td>
        <td><%= truncate(message.body, length: 50) %></td> <%# Truncate long messages %>
        <td><%= link_to 'Show', message_path(message) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
