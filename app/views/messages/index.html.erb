<h1>All Messages</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Chat ID</th>
      <th>User ID</th>
      <th>Body</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Show</th>
    </tr>
  </thead>
  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.id %></td>
        <td><%= message.chat_id %></td>
        <td><%= message.user_id %></td>
        <td><%= truncate(message.body, length: 40) %></td>
        <td><%= message.created_at %></td>
        <td><%= message.updated_at %></td>
        <td><%= link_to 'View', message_path(message), class: "btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
